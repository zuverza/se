<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="tienda" method="upgrade">
	<name>Tracking - Google Analytics</name>
	<version>0.8.2</version>
	<creationDate>October 2011</creationDate>
	<author>Dioscouri</author>
	<authorEmail>info@dioscouri.com</authorEmail>
	<authorUrl>http://www.dioscouri.com</authorUrl>
	<copyright>2011 Dioscouri.com</copyright>
	<license>GNU General Public License v2</license>
	<description>GOOGLE ANALYTICS PLUGIN DESC</description>
	
	<files>
		<filename plugin="googleanalytics">googleanalytics.php</filename>
	</files>
    
    <languages folder="languages">
        <language tag="en-GB">en-GB.plg_tienda_googleanalytics.ini</language>
    </languages>
    
	<params>
		<param name="webid" type="text" default="" label="GOOGLE ANALYTICS UA CODE" description="GOOGLE ANALYTICS UA CODE DESC" />
		<param name="inccategory" type="radio" default="0" label="INCLUDE PRODUCT CATEGORY" description="INCLUDE PRODUCT CATEGORY DESC">
		  <option value="0">No</option>
		  <option value="1">Yes</option>
		</param>	
	</params>	
				
</install>