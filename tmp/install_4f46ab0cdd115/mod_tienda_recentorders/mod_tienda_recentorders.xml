<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" position="tienda_dashboard_right" client="administrator" method="upgrade">
    <name>Recent Orders</name>
    <author>Dioscouri</author>
    <authorEmail>info@dioscouri.com</authorEmail>
    <authorUrl>http://www.dioscouri.com</authorUrl>
    <version>0.8.2</version>
    <creationDate>October 2011</creationDate>
    <copyright>2011 Dioscouri.com</copyright>
    <license>GNU General Public License</license>
    <description>THIS MODULE DISPLAYS RECENT ORDERS</description>
    <files>
        <filename module="mod_tienda_recentorders">mod_tienda_recentorders.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>

	<languages folder="languages">
		<language tag="en-GB">en-GB.mod_tienda_recentorders.ini</language>
	</languages>

	<params>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
        <param name="hide_title" type="radio" default="1" label="Hide Module Title" description="Hide Module Title Desc">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
		<param name="num_orders" type="text" default="5" size="10" label="Number of Orders" description="Number of Orders Desc" />
    </params>
</install>