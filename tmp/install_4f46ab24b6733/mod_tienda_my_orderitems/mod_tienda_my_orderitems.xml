<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" position="left" method="upgrade">
    <name>My Ordered Items</name>
    <author>Dioscouri</author>
    <authorEmail>info@dioscouri.com</authorEmail>
    <authorUrl>http://www.dioscouri.com</authorUrl>
    <version>0.8.2</version>
    <creationDate>October 2011</creationDate>
    <copyright>2011 Dioscouri.com</copyright>
    <license>GNU General Public License</license>
    <description>Displays items recently ordered by a user</description>
    
    <files>
        <filename module="mod_tienda_my_orderitems">mod_tienda_my_orderitems.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>
    
    <params>
        <param name="display_title" type="list" default="1" label="Show Title" description="Show Title Desc">
            <option value="1">ENABLED</option>
            <option value="0">DISABLED</option>
        </param>
        <param name="display_image" type="list" default="0" label="Show Image" description="Show Image Desc">
            <option value="1">ENABLED</option>
            <option value="0">DISABLED</option>
        </param>
        <param name="display_image_width" type="text" default="36" label="Image Width" description="Image Width Desc" />
        <param name="display_image_height" type="text" default="36" label="Image Height" description="Image Height Desc" />
        <param name="display_downloads_only" type="list" default="1" label="Show Products with Downloads Only" description="Show Products with Downloads Only Desc">
            <option value="1">ENABLED</option>
            <option value="0">DISABLED</option>
        </param>
        <param name="max_number" type="text" default="5" label="Max Number" description="MAX_NUMBER" />
        <param type="spacer" />
        <param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
        <param type="spacer" />
        <param name="null_text" type="text" size="50" default="No Products Found" label="Null Text" description="Null Text Desc"></param>
    </params>
</install>